<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:id="@+id/shape_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_shape_default">

        <com.meishe.libmsbeauty.view.RoundImageView
            android:id="@+id/shape_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/cheek_thinning" />
        <ImageView
            android:id="@+id/shape_icon_mask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/beauty_facetype_kind_edit"
            android:background="@drawable/shape_beauty_menu_select"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/shape_txt"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/filter"
        android:textColor="@color/black"
        android:layout_below="@+id/shape_icon_layout"
        android:gravity="center"
        android:textSize="12sp" />

    <View
        android:id="@+id/blue_point"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp6"
        android:visibility="gone"
        android:layout_below="@+id/shape_txt"
        android:background="@drawable/capture_beauty_blue_point"
        />

</RelativeLayout>