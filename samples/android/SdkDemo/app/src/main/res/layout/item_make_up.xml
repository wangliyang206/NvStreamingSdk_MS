<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/makeup_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_px_15"
    tools:background="@color/color_888888">

    <com.meishe.base.view.RoundImageView
        android:id="@+id/makeup_imageAsset"
        android:layout_width="@dimen/dp_px_150"
        android:layout_height="@dimen/dp_px_150"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:x_radius="@dimen/dp_px_24"
        app:y_radius="@dimen/dp_px_24" />


    <com.meishe.base.view.RoundImageView
        android:id="@+id/makeup_icon_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@color/color_D9A5CFFF"
        android:padding="13dp"
        android:src="@mipmap/icon_adjust"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/makeup_imageAsset"
        app:layout_constraintLeft_toLeftOf="@+id/makeup_imageAsset"
        app:layout_constraintRight_toRightOf="@+id/makeup_imageAsset"
        app:layout_constraintTop_toTopOf="@+id/makeup_imageAsset"
        app:x_radius="@dimen/dp_px_24"
        app:y_radius="@dimen/dp_px_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/makeup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/makeup_imageAsset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_px_15"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/makeup_null"
        android:textColor="@color/color_3A3A3A"
        android:textSize="@dimen/sp_px_27"
        app:layout_constraintLeft_toLeftOf="@+id/makeup_imageAsset"
        app:layout_constraintRight_toRightOf="@+id/makeup_imageAsset"
        app:layout_constraintTop_toBottomOf="@+id/makeup_imageAsset" />


</androidx.constraintlayout.widget.ConstraintLayout>
