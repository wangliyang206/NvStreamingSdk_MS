<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_adjust_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dp5"
    android:paddingBottom="@dimen/dp5"
    >
    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/dp9"
        android:layout_height="@dimen/dp9"
        android:src="@drawable/acitivity_equalizer_type_item_selected"
        android:layout_margin="@dimen/dp6"
        />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp11"
        android:textColor="@color/ffDDDDDD"
        />
</LinearLayout>