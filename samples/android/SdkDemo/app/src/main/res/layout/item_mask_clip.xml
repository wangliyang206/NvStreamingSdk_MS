<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assetItem"
    android:layout_width="84dp"
    android:layout_height="54dp"
    android:layout_margin="2dp"
    android:background="@drawable/activity_animation_clip_selected">

    <View
        android:id="@+id/view_frame"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_item_mask_select_frame" />

    <com.meishe.base.view.RoundImageView
        android:id="@+id/imageAsset"
        android:layout_width="77dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="1.5dp"
        android:scaleType="fitXY"
        app:x_radius="4.5dp"
        app:y_radius="4.5dp" />

    <TextView
        android:id="@+id/nameAsset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="11sp" />

</RelativeLayout>
