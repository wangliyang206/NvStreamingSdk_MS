<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5"
    android:orientation="vertical">

    <com.meishe.sdkdemo.edit.view.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp64"
        android:layout_marginBottom="@dimen/dp80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginLeft="@dimen/dp13"
                android:gravity="center"
                android:text="@string/captureSetting"
                android:textColor="@color/ff333333"
                android:textSize="@dimen/sp16" />

            <!-- 拍摄设置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="34dp"
                    android:text="@string/captureResolution"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/capture_ratio_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/capture_ratio_4k"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_ratio_4k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/k4k"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/capture_ratio_1080"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="34dp"
                        android:text="@string/int1080"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/capture_ratio_720"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="true"
                        android:paddingLeft="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="34dp"
                        android:text="@string/int720"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/start_native_camera"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switch_start_native_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginLeft="13dp"
                android:gravity="center"
                android:text="@string/outputSetting"
                android:textColor="@color/ff333333"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:id="@+id/output_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="12dp"
                    android:text="@string/outputResolution"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/out_ratio_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/output_ratio_4k"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/k4k"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/output_ratio_1080"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/int1080"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/output_ratio_720"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/int720"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/output_ratio_540"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/int540"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@mipmap/icon_line" />

            <LinearLayout
                android:id="@+id/bitrate_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/bitrate"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/output_bitrate_editText"
                    android:layout_width="185dp"
                    android:layout_height="21dp"
                    android:background="#ffd8d8d8"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textColor="#a8a2a2"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/mbps"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@mipmap/icon_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/disable_hardware_encoder"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/encoder_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/quick_pack"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/quick_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hdr_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="13dp"
                    android:gravity="center"
                    android:text="@string/hdrSetting"
                    android:textColor="@color/ff333333"
                    android:textSize="@dimen/sp16" />

                <RadioGroup
                    android:id="@+id/rg_liveWindow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/liveWindowModel"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_live_sdr"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="sdr"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_live_device"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="@string/device"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_live_if"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="AutoSDR"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@mipmap/icon_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/resolution_sdr_color_gain"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <com.meishe.base.view.MagicProgress
                        android:id="@+id/hdr_color_gain_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        app:progressBackGround="@color/gray_8288"
                        app:progressForwardGround="@android:color/transparent"
                        app:textColorMagic="@color/black"
                        app:textLongShow="true"
                        app:thumbColor="@color/blue_4a" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@mipmap/icon_line" />

                <RadioGroup
                    android:id="@+id/rg_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/resolutionConfig"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_resolution_8"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="8bit"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_resolution_16"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="16bit"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_resolution_auto"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="auto"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@mipmap/icon_line" />

                <LinearLayout
                    android:id="@+id/compile_hdr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/exportHEVCEnable"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/compile_hevc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="12dp"
                        android:switchMinWidth="50dp"
                        android:textOff=""
                        android:textOn=""
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@mipmap/icon_line" />

                <RadioGroup
                    android:id="@+id/rg_export_config"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/exportConfig"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_export_none"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="none"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_export_2084"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="st2084"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_export_hlg"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="hlg"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_export_hdr_10_plus"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="14dp"
                        android:text="hdr10plus"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>


            <TextView
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginLeft="13dp"
                android:gravity="center"
                android:text="@string/others"
                android:textColor="@color/ff333333"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/background_blur_fill"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/backgroud_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@mipmap/icon_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/setting_auto_arScene"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switch_arSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@mipmap/icon_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="34dp"
                    android:text="@string/setting_cache"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/capture_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/capture_cache_single"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="34dp"
                        android:text="@string/setting_cache_single"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/capture_cache_double"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:clickable="true"
                        android:paddingLeft="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="34dp"
                        android:text="@string/setting_cache_double"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@mipmap/icon_line" />

            <LinearLayout
                android:id="@+id/layout_test_res"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="70dp"
                    android:text="@string/show_test_res"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switch_test_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:switchMinWidth="50dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/serviceAgreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/service_agreement"
            android:textColor="#ff44a8ff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/privacy_policy"
            android:textColor="#ff44a8ff"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/sdkVersion"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/ff333333"
        android:textSize="12sp" />
</FrameLayout>