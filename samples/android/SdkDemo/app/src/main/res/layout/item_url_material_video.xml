<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_url_video_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_url_video_select"
        android:layout_width="@dimen/dp_px_75"
        android:layout_height="@dimen/dp_px_75"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_px_15"
        android:layout_marginEnd="@dimen/dp_px_15"
        android:button="@drawable/bg_blue_checkbox"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_url_video_copy"
        android:layout_width="@dimen/dp_px_69"
        android:layout_height="@dimen/dp_px_69"
        android:layout_marginEnd="@dimen/dp_px_30"
        android:layout_marginBottom="@dimen/dp_px_30"
        android:src="@mipmap/icon_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
