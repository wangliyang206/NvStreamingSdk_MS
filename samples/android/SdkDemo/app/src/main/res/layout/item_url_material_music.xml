<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_px_60"
    android:layout_marginTop="@dimen/dp_px_48"
    android:layout_marginEnd="@dimen/dp_px_60">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_px_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_333333">

            <ImageView
                android:id="@+id/iv_url_music_cover"
                android:layout_width="@dimen/dp_px_165"
                android:layout_height="@dimen/dp_px_165"
                android:layout_marginStart="@dimen/dp_px_15"
                android:layout_marginTop="@dimen/dp_px_15"
                android:layout_marginBottom="@dimen/dp_px_15"
                android:contentDescription="@null"
                android:src="@drawable/music_single_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_url_music_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_px_45"
                android:layout_marginEnd="@dimen/dp_px_33"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_px_36"
                app:layout_constraintBottom_toTopOf="@+id/tv_url_music_duration"
                app:layout_constraintLeft_toRightOf="@+id/iv_url_music_cover"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_url_music_cover"
                tools:text="网络音乐" />

            <TextView
                android:id="@+id/tv_url_music_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="00:00"
                android:textColor="@color/color_A4A4A4"
                android:textSize="@dimen/sp_px_36"
                app:layout_constraintBottom_toBottomOf="@+id/iv_url_music_cover"
                app:layout_constraintLeft_toLeftOf="@+id/tv_url_music_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_url_music_name" />

            <ImageView
                android:id="@+id/iv_url_music_copy"
                android:layout_width="@dimen/dp_px_69"
                android:layout_height="@dimen/dp_px_69"
                android:layout_marginEnd="@dimen/dp_px_33"
                android:layout_marginBottom="@dimen/dp_px_15"
                android:src="@mipmap/icon_copy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
