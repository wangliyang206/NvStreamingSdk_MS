<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_cs_image"
        android:layout_width="@dimen/dp_px_150"
        android:layout_height="@dimen/dp_px_150"
        android:layout_marginLeft="@dimen/dp_px_30"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_cs_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ms994a90e2"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/item_cs_image"
        app:layout_constraintLeft_toLeftOf="@id/item_cs_image"
        app:layout_constraintRight_toRightOf="@id/item_cs_image"
        app:layout_constraintTop_toTopOf="@id/item_cs_image" />

    <com.meishe.sdkdemo.capturescene.view.CircleBarView
        android:id="@+id/item_cs_download"
        android:layout_width="@dimen/dp13"
        android:layout_height="@dimen/dp13"
        android:background="@mipmap/icon_download"
        android:visibility="visible"
        app:CBNoneProgressColor="@color/menu_selected"
        app:CBProgressColor="@color/dy_text_after_music_seleeted"
        app:layout_constraintRight_toRightOf="@id/item_cs_image"
        app:layout_constraintTop_toTopOf="@id/item_cs_image" />
</androidx.constraintlayout.widget.ConstraintLayout>