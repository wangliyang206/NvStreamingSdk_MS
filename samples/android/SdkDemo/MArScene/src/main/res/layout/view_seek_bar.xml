<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_FF242728">

    <TextView
        android:id="@+id/seek_bar_title"
        android:layout_width="@dimen/dp_px_150"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_px_33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/beauty"
        tools:textColor="@color/white" />

    <com.meishe.base.view.MagicProgress
        android:id="@+id/seek_bar_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_px_135"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:focusable="true"
        android:thumb="@drawable/beauty_seek_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/seek_bar_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textBgStyle="bubble"
        app:textColorMagic="@color/color_3A3A3A"
        app:textLongShow="true"
        app:textSizeMagic="@dimen/sp_px_36" />

</merge>