<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_px_975"
    android:background="@color/black_1010"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cut_dialog_resolution_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_63"
        android:layout_marginLeft="@dimen/dp_px_63"
        android:layout_marginTop="@dimen/dp_px_46"
        android:background="@drawable/cut_dialog_resolution_back_img"
        android:contentDescription="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cut_dialog_resolution_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="@string/cut_dialog_resolution_title"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_px_42" />

    <TextView
        android:id="@+id/cut_dialog_resolution_text_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_150"
        android:layout_marginLeft="@dimen/dp_px_150"
        android:layout_marginTop="@dimen/dp_px_165"
        android:text="@string/cut_dialog_resolution_tip1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_px_42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_px_135"
        android:layout_marginEnd="@dimen/dp_px_183"
        android:layout_marginRight="@dimen/dp_px_183"
        android:text="@string/cut_dialog_resolution_tip2"
        android:textColor="@color/gray_a4a"
        android:textSize="@dimen/sp_px_30"
        tools:ignore="RelativeOverlap" />

    <com.meishe.base.view.CustomCompileParamView
        android:id="@+id/cut_dialog_resolution_param_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cut_dialog_resolution_text_tip1"
        android:layout_marginLeft="@dimen/dp_px_180"
        android:layout_marginTop="@dimen/dp_px_15"
        android:layout_marginRight="@dimen/dp_px_180" />

    <TextView
        android:id="@+id/cut_dialog_resolution_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cut_dialog_resolution_sure"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_px_54"
        android:textColor="@color/white_9f" />

    <Button
        android:id="@+id/cut_dialog_resolution_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_px_90"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_px_184"
        android:layout_marginRight="@dimen/dp_px_184"
        android:layout_marginBottom="@dimen/dp_px_150"
        android:background="@drawable/red_rect"
        android:text="@string/cut_dialog_resolution_button_text"
        android:textColor="@color/white" />
</RelativeLayout>